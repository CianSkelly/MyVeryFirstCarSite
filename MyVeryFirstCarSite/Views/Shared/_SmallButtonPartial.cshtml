@model MyVeryFirstCarSite.Areas.Admin.Models.SmallButtonModel
<a type="button" class="btn @Model.ButtonType btn-sm"
   href="@Url.Action(Model.Action)@Model.ActionParameters">
    <span class="glyphicon glyphicon-@Model.Glyph"></span>
    @*below "sr-only" means the text will not be displayed in the button, it's ony used for browser optimisation'*@
    @*for example - for visually impaired people, it will give the audio of the text for the user*@
    <span class="sr-only">@Model.Text</span>
</a>
